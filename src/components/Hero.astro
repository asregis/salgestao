<section id="hero-section" class="relative min-h-screen flex flex-col bg-gradient-to-br from-dark-bg via-dark-surface to-dark-bg overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-20 left-10 w-72 h-72 bg-sal-accent rounded-full mix-blend-screen filter blur-xl animate-pulse-slow"></div>
    <div class="absolute bottom-20 right-10 w-72 h-72 bg-sal-gold rounded-full mix-blend-screen filter blur-xl animate-pulse-slow delay-1000"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-sal-green rounded-full mix-blend-screen filter blur-2xl animate-pulse-slow delay-500"></div>
  </div>

  <!-- Hero Header (Static) -->
  <header class="relative z-40 py-4 lg:py-6">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <div class="flex items-center">
          <a href="/" class="flex items-center">
            <img src="/svg/logo.svg" alt="SAL Gestão Financeira Logo" class="h-10 w-auto">
          </a>
        </div>

        <!-- Desktop Navigation -->
        <nav class="hidden md:flex items-center space-x-8">
          <a href="#inicio" class="text-dark-text hover:text-sal-accent transition-colors duration-300 font-secondary font-medium">
            Início
          </a>
          <a href="#servicos" class="text-dark-text hover:text-sal-accent transition-colors duration-300 font-secondary font-medium">
            Serviços
          </a>
          <a href="#diferenciais" class="text-dark-text hover:text-sal-accent transition-colors duration-300 font-secondary font-medium">
            Diferenciais
          </a>
          <a href="#contato" class="text-dark-text hover:text-sal-accent transition-colors duration-300 font-secondary font-medium">
            Contato
          </a>
        </nav>

        <!-- CTA Button -->
        <div class="flex items-center space-x-4">
          <a 
            href="https://wa.me/5548999277753?text=Olá! Gostaria de saber mais sobre os serviços da SAL Gestão Financeira."
            target="_blank"
            rel="noopener noreferrer"
            class="group relative border-2 border-sal-gold bg-transparent hover:bg-gradient-to-r hover:from-sal-beige hover:to-sal-gold text-sal-gold hover:text-dark-bg font-secondary font-semibold px-4 py-2 lg:px-6 lg:py-3 rounded-lg transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-sal-gold/25"
          >
            Fale Conosco
          </a>
          
          <!-- Mobile Menu Button -->
          <button 
            class="md:hidden p-2 text-dark-text hover:text-sal-accent transition-colors"
            id="hero-mobile-menu-btn"
            aria-label="Abrir menu"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Navigation -->
      <div class="md:hidden hidden" id="hero-mobile-menu">
        <nav class="py-4 space-y-3 border-t border-dark-border mt-4">
          <a href="#inicio" class="block text-dark-text hover:text-sal-accent transition-colors duration-300 font-secondary font-medium py-2">
            Início
          </a>
          <a href="#servicos" class="block text-dark-text hover:text-sal-accent transition-colors duration-300 font-secondary font-medium py-2">
            Serviços
          </a>
          <a href="#diferenciais" class="block text-dark-text hover:text-sal-accent transition-colors duration-300 font-secondary font-medium py-2">
            Diferenciais
          </a>
          <a href="#contato" class="block text-dark-text hover:text-sal-accent transition-colors duration-300 font-secondary font-medium py-2">
            Contato
          </a>
        </nav>
      </div>
    </div>
  </header>

  <div class="container mx-auto px-6 lg:px-8 relative z-10 flex-1 flex items-center justify-center">
    <div class="max-w-6xl mx-auto w-full">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div class="text-center lg:text-left">
          <h1 class="font-primary font-bold text-4xl lg:text-4xl xl:text-5xl text-dark-text leading-tight mb-6 animate-slide-up">
            <span class="block">Terceirize sua<br class="sm:hidden"/>
            <span class="text-sal-accent bg-gradient-to-r from-sal-accent to-sal-gold bg-clip-text text-transparent">Gestão Financeira</span></span>
            <span class="block mt-1">e Foque no que</span>
            <span class="block text-sal-gold">Realmente Importa</span>
          </h1>
          
          <p class="text-base sm:text-lg lg:text-xl text-dark-text-secondary mb-8 font-secondary animate-slide-up delay-200">
            Chega de planilhas manuais. Deixe a SAL cuidar da sua saúde financeira.
          </p>

          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center lg:justify-start animate-slide-up delay-400">
            <a 
              href="https://wa.me/5548999277753?text=Olá! Gostaria de saber mais sobre os serviços da SAL Gestão Financeira."
              target="_blank"
              rel="noopener noreferrer"
              class="bg-gradient-to-r from-sal-beige to-sal-gold hover:from-sal-gold hover:to-sal-beige text-dark-bg font-secondary font-semibold px-6 sm:px-8 py-4 rounded-lg transition-all duration-300 hover:scale-105 shadow-2xl flex items-center justify-center gap-2 sm:gap-3 animate-glow text-sm sm:text-base"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              Fale Conosco
            </a>
            
            <a 
              href="#servicos"
              class="border-2 border-emerald-500 bg-transparent hover:bg-gradient-to-r hover:from-emerald-500 hover:to-emerald-600 text-emerald-500 hover:text-white font-secondary font-semibold px-6 sm:px-8 py-4 rounded-lg transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-emerald-500/25 flex items-center justify-center gap-2 sm:gap-3 text-sm sm:text-base"
            >
              <span class="hidden sm:inline">Conheça Nossos Serviços</span>
              <span class="sm:hidden">Nossos Serviços</span>
            </a>
          </div>
        </div>

        <!-- Visual Element (hidden on mobile) -->
        <div class="hidden lg:flex relative justify-center lg:justify-end animate-fade-in delay-600">
          <div class="relative">
            <div class="w-96 h-96 bg-gradient-to-br from-sal-green via-sal-beige to-sal-gold rounded-full opacity-20 animate-pulse-slow"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <img 
                src="/svg/white_s.svg" 
                alt="SAL Logo" 
                class="w-40 h-40 animate-float opacity-90 drop-shadow-2xl"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Mobile menu toggle for hero header
    const heroMenuBtn = document.getElementById('hero-mobile-menu-btn');
    const heroMobileMenu = document.getElementById('hero-mobile-menu');

    heroMenuBtn?.addEventListener('click', () => {
      heroMobileMenu?.classList.toggle('hidden');
    });

    // Close mobile menu when clicking on links
    const heroMobileLinks = heroMobileMenu?.querySelectorAll('a');
    heroMobileLinks?.forEach(link => {
      link.addEventListener('click', () => {
        heroMobileMenu?.classList.add('hidden');
      });
    });

    // Smooth scrolling for anchor links in hero header
    document.querySelectorAll('#hero-section a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', (e) => {
        e.preventDefault();
        const href = anchor.getAttribute('href');
        const target = href ? document.querySelector(href) : null;
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  </script>
</section>