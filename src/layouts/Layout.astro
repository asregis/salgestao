      </svg>
    </a>
    
    <script>
      // Initialize Lucide icons with retry mechanism
      function initializeLucideIcons() {
        const lucideGlobal = (window as any).lucide;
        if (lucideGlobal && lucideGlobal.createIcons) {
          lucideGlobal.createIcons();
          return true;
        }
        return false;
      }
      
      // Try to initialize immediately
      let initialized = false;
      
      // Wait for DOM to be ready
      document.addEventListener('DOMContentLoaded', function() {
        if (!initialized) {
          initialized = initializeLucideIcons();
        }
      });
      
      // Also try on window load
      window.addEventListener('load', function() {
        if (!initialized) {
          initialized = initializeLucideIcons();
        }
      });
      
      // Fallback: try after a short delay
      setTimeout(function() {
        if (!initialized) {
          initializeLucideIcons();
        }
      }, 500);
    </script>
  </body>
</html>

<style is:global>
  #main-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 40;
    transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out, backdrop-filter 0.3s ease-in-out;
    transform: translateY(-100%);
    opacity: 0;
  }

  #main-header.header-scrolled {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-bottom: 1px solid theme('colors.dark-border');
    transform: translateY(0) !important;
    opacity: 1 !important;
  }

  #main-header.header-hidden {
    transform: translateY(-100%) !important;
    opacity: 0 !important;
  }

  /* Animação de entrada */
  #main-header.header-entering {
    animation: slideDownIn 0.4s ease-out forwards;
  }

  /* Animação de saída */
  #main-header.header-exiting {
    animation: slideUpOut 0.3s ease-in forwards;
  }

  @keyframes slideDownIn {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideUpOut {
    from {
      transform: translateY(0);
      opacity: 1;
    }
    to {
      transform: translateY(-100%);
      opacity: 0;
    }
  }
</style>